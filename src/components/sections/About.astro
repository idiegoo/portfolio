---
import { getLangFromUrl, useTranslations } from '../../i18n';
import { skills } from '../../data/skills';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
const skillsData = skills[lang];
---

<section id="about" class="py-8 md:py-0 px-4">
  <div class="max-w-6xl mx-auto">
    <div class="text-center mb-16">
      <h2 class="text-4xl md:text-5xl font-bold mb-6 bg-gradient-to-r from-purple-400 to-green-400 bg-clip-text text-transparent">
        {t('about.title')}
      </h2>
    </div>

    <div class="grid gap-12 items-center">
      <!-- About Content -->
      <div class="space-y-6">
        <p set:html={t('about.description')} class="text-lg text-gray-400 leading-relaxed mx-2">
        </p>
        
        <div class="space-y-8">
          <h3 class="text-2xl font-semibold text-white mb-6">
            {t('about.skills')}
          </h3>
          
          <div class="space-y-6">
            <!-- Frontend Skills -->
            <div class="skill-category">
              <h4 class="text-lg font-medium text-purple-400 mb-3">{skillsData.frontend.title}</h4>
              <div class="flex flex-wrap gap-2">
                {skillsData.frontend.items.map((skill) => (
                  <span class="skill-tag bg-purple-500/10 text-purple-400 border-purple-400/20">
                    {skill}
                  </span>
                ))}
              </div>
            </div>

            <!-- Backend Skills -->
            <div class="skill-category">
              <h4 class="text-lg font-medium text-green-400 mb-3">{skillsData.backend.title}</h4>
              <div class="flex flex-wrap gap-2">
                {skillsData.backend.items.map((skill) => (
                  <span class="skill-tag bg-green-500/10 text-green-400 border-green-400/20">
                    {skill}
                  </span>
                ))}
              </div>
            </div>

            <!-- Tools Skills -->
            <div class="skill-category">
              <h4 class="text-lg font-medium text-blue-400 mb-3">{skillsData.tools.title}</h4>
              <div class="flex flex-wrap gap-2">
                {skillsData.tools.items.map((skill) => (
                  <span class="skill-tag bg-blue-500/10 text-blue-400 border-blue-400/20">
                    {skill}
                  </span>
                ))}
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  @reference "tailwindcss";
  .skill-tag {
    @apply px-3 py-1 rounded-full text-sm font-medium border transition-all duration-200 hover:scale-105;
  }

  .skill-category {
    @apply transition-all duration-300 hover:transform hover:scale-105;
  }
</style>
