---
export interface Props {
  icon: 'github' | 'linkedin' | 'mail' | 'heart' | 'arrow-down' | 'sun' | 'moon' | 'globe' | 'external-link' | 'menu' | 'x';
  size?: number;
  class?: string;
  brandColors?: boolean;
}

const { icon, size = 20, class: className = "", brandColors = false } = Astro.props;

// FunciÃ³n para obtener las clases de color de marca
const getBrandColorClasses = (iconType: string) => {
  if (!brandColors) return '';

  switch (iconType) {
    case 'github':
      return 'group-hover:text-gray-300';
    case 'linkedin':
      return 'group-hover:text-blue-400';
    case 'mail':
      return 'group-hover:text-red-400';
    default:
      return '';
  }
};
---

{icon === 'github' && (
  <svg 
    xmlns="http://www.w3.org/2000/svg" 
    width={size} 
    height={size} 
    viewBox="0 0 24 24" 
    fill="none" 
    stroke="currentColor" 
    stroke-width="2" 
    stroke-linecap="round" 
    stroke-linejoin="round" 
    class={`lucide lucide-github transition-colors duration-300 ${getBrandColorClasses('github')} ${className}`}
  >
    <path d="M15 22v-4a4.8 4.8 0 0 0-1-3.5c3 0 6-2 6-5.5.08-1.25-.27-2.48-1-3.5.28-1.15.28-2.35 0-3.5 0 0-1 0-3 1.5-2.64-.5-5.36-.5-8 0C6 2 5 2 5 2c-.3 1.15-.3 2.35 0 3.5A5.403 5.403 0 0 0 4 9c0 3.5 3 5.5 6 5.5-.39.49-.68 1.05-.85 1.65-.17.6-.22 1.23-.15 1.85v4"/>
    <path d="M9 18c-4.51 2-5-2-7-2"/>
