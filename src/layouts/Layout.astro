---
import Analytics from '@vercel/analytics/astro';

interface Props {
	lang?: 'en' | 'es';
	title?: string;
	siteName?: string;
	description?: string;
	image?: string;
	canonicalURL?: string;
}

const {
	lang = 'en',
	title = lang === 'es'
		? 'Diego Aguirre - Desarrollador Full Stack | Portafolio'
		: 'Diego Aguirre - Full Stack Developer | Portfolio',
  siteName = lang === 'es' ? 'Diego Aguirre Portafolio' : 'Diego Aguirre Portfolio',
	description = lang === 'es'
		? 'Portfolio de Diego Aguirre, Desarrollador Full Stack especializado en React, TypeScript, Node.js y tecnologías web modernas. Creando soluciones innovadoras y experiencias digitales excepcionales.'
		: 'Portfolio of Diego Aguirre, Full Stack Developer specializing in React, TypeScript, Node.js and modern web technologies. Building innovative solutions and exceptional digital experiences.',
  image = '/images/portfolio.webp',
	canonicalURL = new URL(Astro.url.pathname, Astro.site),
} = Astro.props;

const siteURL = Astro.site || 'https://idiegoo.vercel.app';
const ogImageURL = new URL(image, siteURL).toString();

// i18n URLs - ensure proper formatting with trailing slashes
const baseURL = siteURL.toString().endsWith('/') ? siteURL.toString() : `${siteURL}/`;
const enURL = baseURL;
const esURL = `${baseURL}es`;
---

<!doctype html>
<html lang={lang} class="dark">
	<head>
		<!-- Basic Meta Tags -->
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <!-- Favicons -->
    <link rel="icon" href="/favicon.ico" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="apple-touch-icon" href="/apple-touch-icon.png" />
		<meta name="generator" content={Astro.generator} />
		<meta name="application-name" content="Diego Aguirre" />
		
		<!-- Google Site Verification -->
		<meta name="google-site-verification"
      content="w8GSHMg14p2vpNfsYilgr2UW3KmSy6UqceTxN4qZnHU" />

		<!-- Primary Meta Tags -->
		<title>{title}</title>
		<meta name="title" content={title} />
		<meta name="description" content={description} />
		<meta name="author" content="Diego Aguirre" />
		<link rel="canonical" href={canonicalURL} />
		
		<!-- Open Graph / Facebook -->
		<meta property="og:type" content="website" />
		<meta property="og:url" content={canonicalURL} />
		<meta property="og:title" content={title} />
		<meta property="og:description" content={description} />
		<meta property="og:image" content={ogImageURL} />
		<meta property="og:locale" content={lang === 'es' ? 'es_ES' : 'en_US'} />
		<meta property="og:site_name" content={siteName} />
		
		<!-- Alternate Languages -->
		<link rel="alternate" hreflang="en" href={enURL} />
		<link rel="alternate" hreflang="es" href={esURL} />
		<link rel="alternate" hreflang="x-default" href={enURL} />
		
		<!-- Additional SEO -->
		<meta name="robots" content="index, follow" />
		<meta name="googlebot" content="index, follow" />
		<meta name="theme-color" content="#0a0a0a" />
		
		<!-- Structured Data (JSON-LD) -->
		<script type="application/ld+json" set:html={JSON.stringify({
			"@context": "https://schema.org",
			"@type": "WebSite",
			"name": siteName,
			"url": siteURL,
			"image": ogImageURL,
			"jobTitle": lang === 'es' ? 'Desarrollador Full Stack' : 'Full Stack Developer',
			"description": description,
			"sameAs": [
				"https://github.com/idiegoo",
				"https://linkedin.com/in/idiegoo"
			],
			"knowsAbout": [
				"React",
				"TypeScript",
				"Node.js",
				"Next.js",
				"JavaScript",
        "Astro",
        lang === 'es' ? "Desarrollo Web" : "Web Development",
        lang === 'es' ? "Desarrollo Full Stack" : "Full Stack Development"
			],
			"alumniOf": {
				"@type": "EducationalOrganization",
				"name": "Pontificia Universidad Católica de Chile"
			}
		})} />
		<Analytics />
	</head>
	<body class="antialiased font-sans">
		<slot />
		<script>
			// Theme initialization
			if (typeof localStorage !== 'undefined') {
				const theme = localStorage.getItem('theme') || 'dark';
				document.documentElement.classList.toggle('dark', theme === 'dark');
			}
		</script>
	</body>
</html>
