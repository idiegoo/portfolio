<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="robots" content="index, follow" />

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://idiegoo.vercel.app/" />
    <meta property="og:title" content="Diego Aguirre - Full Stack Developer | Portfolio" />
    <meta property="og:description" content="Portfolio of Diego Aguirre, Full Stack Developer specializing in React, TypeScript, Node.js and modern web technologies. Building innovative solutions and exceptional digital experiences." />
    <meta property="og:image" content="https://idiegoo.vercel.app/images/portfolio.webp" />
    <meta property="og:locale" content="en_US" />
    <meta property="og:site_name" content="Diego Aguirre Portfolio" />

    <!-- Hreflang correcto → obligatorio si usas /en y /es -->
    <link rel="alternate" hreflang="en" href="https://idiegoo.vercel.app/en" />
    <link rel="alternate" hreflang="es" href="https://idiegoo.vercel.app/es" />
    <link rel="alternate" hreflang="x-default" href="https://idiegoo.vercel.app/" />

    <!-- Redirección segura (client-side, antes del primer paint) -->
    <script>
      try {
        const lang = navigator.language?.slice(0, 2).toLowerCase();
        const target = lang === "es" ? "/es" : "/en";

        // Solo redirige si no está ya en el idioma correcto
        if (!location.pathname.startsWith(target)) {
          location.replace(target);
        }
      } catch (e) {
        /* fallback silencioso */
      }
    </script>

    <!-- Evita cualquier flicker antes de redirigir -->
    <style>
      body { visibility: hidden; }
    </style>
  </head>
  <body></body>
</html>
